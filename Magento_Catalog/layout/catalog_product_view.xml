<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        
		
		<move element="specialdiscription" destination="product.info.main" before="product.info.price" />
		
		
	<referenceBlock name="product.info.main">
	  
 <block class="Magento\Catalog\Block\Product\View" name="specialdiscription" template="Magento_Catalog::product/view/specialdiscription.phtml">
				  
<arguments>					  
<argument name="at_call" xsi:type="string">getCustomLink</argument>
<argument name="at_code" xsi:type="string">custom_link</argument>
 <argument name="at_label" xsi:type="string">Custom Link</argument>	
 <argument name="add_attribute" xsi:type="string">itemprop="custom_link"</argument>
				  
</arguments>
		  
</block>
	  
	  
	</referenceBlock>
	


    </body>
</page>
